{% extends '@nucleus/partials/particle.html.twig' %}
{% set indentifier = random() %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ gantry.jf_g5_theme.tmpl_root() }}jf/particles/jf_p_radialslider/jf_radialslider.min.css" type="text/css" />
	{% if particle.css %}<style>{{ particle.css|html|raw }}</style>{% endif %}
{% endblock %}

{% block javascript %}
	<script src="{{ gantry.jf_g5_theme.tmpl_root() }}jf/particles/jf_p_radialslider/jquery.parallax.min.js" type="text/javascript"></script>
	<script type="text/javascript">jQuery(document).ready(function(e){e("[data-parallax]").parallax()});</script>
	<script type="text/javascript" src="{{ gantry.jf_g5_theme.tmpl_root() }}jf/particles/jf_p_radialslider/snap.svg-min.js"></script>
	<script type="text/javascript" src="{{ gantry.jf_g5_theme.tmpl_root() }}jf/particles/jf_p_radialslider/jf_radialslider.min.js"></script>
	{% if particle.autoplay %}<script type="text/javascript">
		jQuery(document).ready(function($){			
			function jf_radial_slider_autoplay() {
				$('#jf_radial_slider-{{ indentifier|e }} .next').trigger('click');
			}
			setInterval(jf_radial_slider_autoplay, {{ particle.autoplay_delay|e }});
		});
	</script>{% endif %}
{% endblock %}

{% block particle %}
	<div id="jf_radial_slider-{{ indentifier|e }}" class="cd-radial-slider-wrapper">
		<ul class="cd-radial-slider" data-radius1="60" data-radius2="1364" data-centerx1="110" data-centerx2="1290">
			
			{% for item in particle.items %}
				<li>
					<div class="svg-wrapper">
						<svg viewBox="0 0 1400 800">
							<defs><clipPath id="cd-image-{{ loop.index }}-{{ indentifier|e }}"><circle id="cd-circle-{{ loop.index }}-{{ indentifier|e }}" cx="110" cy="400" r="1364"/></clipPath></defs>
							<image height='800px' width="1400px" clip-path="url(#cd-image-{{ loop.index }}-{{ indentifier|e }})" xlink:href="{{ url(item.image)|e }}"></image>
						</svg>
					</div>
					<div class="cd-radial-slider-content">
						<div{% if item.parallax %} data-parallax{% endif %}>
							<div class="wrapper{% if item.parallax %} layer{% endif %}"{% if item.parallax %} data-depth="0.20"{% endif %}>
								<div{% if item.textAl %} style="text-align:{{ item.textAl|e }}"{% endif %}>
									{{ item.html|html|raw }}
									{% if item.scrollBtn %}<div class="clear"></div><a href="{{ item.scrollBtn_url|e }}" class="mouse-icon js-trigger" style="border-color:{{ item.scrollBtn_color|e }}"><span class="wheel" style="background-color:{{ item.scrollBtn_color|e }}"></span></a>{% endif %}
